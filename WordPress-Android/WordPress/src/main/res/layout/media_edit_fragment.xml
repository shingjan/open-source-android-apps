<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_translucent_50"
    android:orientation="vertical"
    android:padding="@dimen/margin_extra_large">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:hint="@string/media_edit_title_text">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/media_edit_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/media_edit_title_text"
            android:textColorHint="@color/transparent"
            android:inputType="textCapSentences|textAutoCorrect"
            tools:text="media_edit_title_text" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:hint="@string/media_edit_caption_text"
        android:layout_marginTop="@dimen/margin_small">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/media_edit_fragment_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/media_edit_caption_text"
            android:textColorHint="@color/transparent"
            android:inputType="textCapSentences|textAutoCorrect"
            tools:text="media_edit_fragment_caption" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:hint="@string/media_edit_description_text"
        android:layout_marginTop="@dimen/margin_small">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/media_edit_fragment_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:hint="@string/media_edit_description_text"
            android:textColorHint="@color/transparent"
            android:inputType="textCapSentences|textAutoCorrect"
            android:lines="3"
            tools:text="media_edit_fragment_caption" />

    </android.support.design.widget.TextInputLayout>
</LinearLayout>
